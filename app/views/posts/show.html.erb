
<div class="col-6 mx-auto p-3 border border-dark">
    <p>
      <h4><%= @post.title %></h4>
    </p>

    <p>Written By:
        <span>
            <% if user_signed_in? %>
                <%= @post.user.username %>
            <% else %>
                'anonymous'
            <% end %>
        </span>
    </p>

    <p>
      <%= @post.body %>
    </p>

    <h5>Comments</h5>

    <% if @post.comments.length() > 0 %>
        <% @post.comments.each do |comment| %>
            <div class="ml-3 mb-3">
               <p><%= comment.body %></p>
               <% if user_signed_in? %>
                   <div>Commented By: <%= comment.user.username %></div>
               <% else %>
                   <div>Commented By: anonymous</div>
               <% end %>
            </div>
        <% end %>
    <% end %>

    <div class="mx-auto mt-3">
        <%= render partial: 'comments/form' %>
    </div>

    <div class="d-flex">
        <%= link_to 'Edit', edit_post_path(@post), class:"mr-3" %>
        <%= link_to 'Back', posts_path %>
    </div>

</div>
