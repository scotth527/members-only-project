<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark justify-content-between">
        <%= link_to "Members-Only", root_path , {class:"navbar-brand"} %>

        <div>
            <% if user_signed_in? %>
                <% p current_user %>
                
                <div class="text-light">Welcome <%= current_user.username%></div>
                <%= link_to "Logout", destroy_user_session_path, method: :delete,
                class:"btn btn-outline-danger my-2 my-sm-0" %>
            <% else %>
                <%= link_to 'Sign In', new_user_session_path, class: "btn btn-outline-info my-2 my-sm-0" %>
                <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-outline-success my-2 my-sm-0" %>
            <% end %>
        </div>
    </nav>

    <% if notice %>
        <div class="alert alert-primary" role="alert">
          <%= notice %>
        </div>
    <% end %>

    <% if alert %>
        <div class="alert alert-danger" role="alert">
          <%= alert %>
        </div>
    <% end %>

    <%= yield %>
  </body>
</html>
